<!DOCTYPE html>
<html lang="es">

    <%- include('./partials/head') %> 


<body class="register">
    <%- include('./partials/header') %> 

    <main class="register__main">
        <section class="register__main__section general__main__section">
           <h1>Registrate</h1>
        
           <form action="" class="form__row" method="POST">
                <div class="form__box">
                    <label class="form__label" for="nombre">Nombre</label>
                    <input class="form__input" type="text" id="nombre" name="name" value="<%= locals.old && old.name ? old.name : null %>">
                    <p class="form__error__msg"><%= locals.errors && errors.name ? errors.name.msg : null%> </p>
                </div>
                <div class="form__box">
                    <label class="form__label" for="apellido">Apellido</label>
                    <input class="form__input" type="text" id="apellido" name="surname" value="<%= locals.old && old.surname ? old.surname : null %>">
                    <p class="form__error__msg"><%= locals.errors && errors.surname ? errors.surname.msg : null%> </p>
                </div>
                <div class="form__box">
                    <label class="form__label" for="usuario">Nombre de usuario</label>
                    <input class="form__input" type="text" id="usuario" name="username" autocomplete="off" value="<%= locals.old && old.username ? old.username : null %>">
                    <p class="form__error__msg"><%= locals.errors && errors.username ? errors.username.msg : null%> </p>
                </div>
                <div class="form__box">
                    <label class="form__label" for="email">Correo electrónico</label>
                    <input class="form__input" type="email" id="email" name="email" autocomplete="off" value="<%= locals.old && old.email ? old.email : null %>">
                    <p class="form__error__msg"><%= locals.errors && errors.email ? errors.email.msg : null%> </p>
                </div>
                <div class="form__box">
                    <label class="form__label" for="password">Contraseña</label>
                    <input class="form__input" type="password" id="password" name="password" autocomplete="off">
                    <p class="form__error__msg"><%= locals.errors && errors.password ? errors.password.msg : null%> </p>
                </div>
                <div class="form__box">
                    <label class="form__label" for="password2">Confirma tu contraseña</label>
                    <input class="form__input" type="password" id="password2" name="password2">
                    <p class="form__error__msg"><%= locals.errors && errors.password2 ? errors.password2.msg : null%> </p>
                </div>
                <div class="form__box">
                    <input  type="checkbox" id="terms" name="terms">
                    <label class="form__label" for="terms">Acepto <a href="/terms">términos y condiciones</a></label>
                    <p class="form__error__msg"><%= locals.errors && errors.terms ? errors.terms.msg : null%> </p>
                </div>
                <div class="form__box__flex">
                    <p class="form__link">¿Estás registrado? <a href="/login">Ingresá</a></p>
                </div>
                <div class="form__box__flex">
                    <a class="form__button form__button--cancel" href="">Cancelar</a>
                    <button class="form__button form__button--submit" type="submit">Registrate</button>
                </div>
           </form>
        </section>
    </main>
</body>

</html>